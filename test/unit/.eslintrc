{
  "env": {
    "mocha": true,
    "browser": true
  },
  "globals": {
    "expect": true,
    "sinon": true
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": "build/webpack.base.conf.js"
      }
    }
  },
  "rules": {
    "import/extensions": ["error", "always", {
      "js": "never",
      "vue": "never"
    }],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": true}]
  }
}
